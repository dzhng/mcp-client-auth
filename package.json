{
  "name": "mcp-kit",
  "version": "1.0.0",
  "description": "A set of useful utils for building MCP clients, starting with reference OAuth implementations.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./oauth": {
      "import": "./dist/mcp-oauth.js",
      "types": "./dist/mcp-oauth.d.ts"
    },
    "./client": {
      "import": "./dist/mcp-client.js",
      "types": "./dist/mcp-client.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "check-types": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "prepublishOnly": "npm run check-types && npm run format:check && npm run build",
    "test": "tsx test-remote-mcp.ts"
  },
  "dependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.4.2",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "ky": "^1.0.0",
    "open": "^10.0.0",
    "openid-client": "^6.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "tsx": "^4.19.4",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "mcp",
    "oauth",
    "client",
    "model-context-protocol"
  ],
  "author": "",
  "license": "ISC",
  "lint-staged": {
    "*.{ts,js,json,md}": [
      "prettier --write"
    ],
    "*.ts": [
      "bash -c 'npm run check-types'"
    ]
  }
}
